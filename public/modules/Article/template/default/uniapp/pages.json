{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"backgroundColor": "#fff",
							"borderRadius": "6px",
							"placeholder": "请输入搜索内容",
							"disabled": true
						}
					}
				}
			}
		}, {
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "频道",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/content/content",
			"style": {}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "后盾人",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#000000"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#bd000a",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar/home.png",
				"selectedIconPath": "static/tabbar/home-select.png",
				"text": "首页"
			}, {
				"pagePath": "pages/category/category",
				"iconPath": "static/tabbar/image-text.png",
				"selectedIconPath": "static/tabbar/image-text-select.png",
				"text": "频道"
			},
			{
				"pagePath": "pages/search/search",
				"iconPath": "static/tabbar/layers.png",
				"selectedIconPath": "static/tabbar/layers-select.png",
				"text": "搜索"
			}
		]
	},
	"condition": {
		"current": 3,
		"list": [
			{
				"name": "index",
				"path": "pages/index/index",
				"query": ""
			},
			{
				"name": "category",
				"path": "pages/category/category",
				"query": ""
			},
			{
				"name": "content",
				"path": "pages/content/content",
				"query": "id=600"
			},
			{
				"name": "search",
				"path": "pages/search/search",
				"query": ""
			}
		]
	}
}
